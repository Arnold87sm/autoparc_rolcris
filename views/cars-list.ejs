    <h1 style="display: flex; justify-content: center; color: #ff4500;">Mașini de Vânzare</h1>

  <!-- Search Form -->
<form action="/masini-de-vanzare" method="GET" class="search-form">
  <div class="search-fields">
    <input type="text" name="marca" placeholder="Marca" />
    <input type="text" name="model" placeholder="Model" />
    <input type="number" name="an_fabricatie" placeholder="An fabricație" />
    <input type="text" name="combustibil" placeholder="Combustibil" />
    <input type="text" name="cutie_viteza" placeholder="Cutie Viteza" />
    <input type="number" name="min_price" placeholder="Preț Minim" />
    <input type="number" name="max_price" placeholder="Preț Maxim" />
    <button type="submit">Caută</button>
  </div>
</form>

    <div class="cars-grid" id="carsGrid">
        <% cars.forEach(car => { %>
            <div class="car-item">
                <a href="/car/<%= car.id %>" class="car-link">
                    <div class="image-wrapper">
                        <img src="<%= car.image_path %>" alt="<%= car.marca %> <%= car.model %>" class="car-image">
                    </div>
                    <div class="car-details">
                        <h3><%= car.marca %> <%= car.model %></h3>
                        <p><%= car.capacitate_cilindrica %> cm³, <%= car.combustibil %>, <%= car.putere %> CP, <%= car.an_fabricatie %></p>
                        <p class="price-tag">Preț: €<%= car.price %></p>
                        <a href="/car/<%= car.id %>" class="view-details">Vezi Detalii</a>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>

    <style>
      .search-form {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin: 20px;
      }
    
      .search-fields input {
        padding: 10px;
        border: 1px solid #444;
        border-radius: 5px;
        background-color: #111;
        color: #fff;
        width: 180px;
      }
    
      .search-fields button {
        padding: 10px 15px;
        background-color: #b22222;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
    
      .search-fields button:hover {
        background-color: #ff4500;
      }
    
      .cars-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* 4 columns per row */
        gap: 20px; /* Adjust spacing between cards */
        margin: 20px;
      }
    
      .car-item {
        background: rgba(50, 50, 50, 0.7);
        padding: 5px; /* Reduced padding to make the box tighter */
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
    
      .car-item:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
      }
    
      .car-link {
        text-decoration: none;
        color: inherit;
        display: block;
      }
    
      .image-wrapper {
        width: 100%;
        height: 250px; /* Set a fixed proportional height */
        overflow: hidden;
        margin-bottom: 10px; /* Reduce space between the image and car details */
        border-radius: 8px; /* Rounded corners */
        }
    
      .car-image {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image fills the space without distortion */
        transition: transform 0.3s ease;
      }
    
      .car-item:hover .car-image {
        transform: scale(1.05);
      }
    
      .car-details {
        margin-top: 5px; /* Reduced space between image and text */
      }
    
      .car-details h3 {
        margin: 0;
        font-size: 1.2em;
        color: #ff4500; /* Keep orange for title */
      }
    
      .car-details p {
        margin: 5px 0;
        font-size: 0.9em;
        color: #fff;
      }
    
      .price-tag {
        color: #ff4500;
        font-weight: bold;
        font-size: 1.1em;
      }
    
      .view-details {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        background-color: #b22222;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
      }
    
      .view-details:hover {
        background-color: #ff4500;
      }
    
      @media (max-width: 768px) {
        .cars-grid {
          grid-template-columns: 1fr; /* Single column layout on smaller screens */
        }
    
        .image-wrapper {
          height: 250px; /* Slightly smaller height for mobile */
        }
      }
    
      .back-to-home {
        display: block;
        margin: 20px 0;
        color: #b22222;
        text-decoration: none;
        font-size: 16px;
      }
    
      .back-to-home:hover {
        color: #ff4500;
      }
    @media (max-width: 1200px) {
      .cars-grid {
        grid-template-columns: repeat(3, 1fr); /* 3 images per row for medium screens */
      }
    }

    @media (max-width: 768px) {
      .cars-grid {
        grid-template-columns: repeat(2, 1fr); /* 2 images per row for smaller screens */
      }

      .image-wrapper {
        height: 200px; /* Smaller images for smaller screens */
      }
    }

    @media (max-width: 480px) {
      .cars-grid {
        grid-template-columns: 1fr; /* 1 image per row for mobile */
      }

      .image-wrapper {
        height: 180px;
      }
    }
    </style>
    

