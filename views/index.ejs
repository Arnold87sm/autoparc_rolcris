<!DOCTYPE html>
<html lang="ro">
<head>
  <meta charset="UTF-8">
  <title>Autoprc RolCris</title>
  <link rel="stylesheet" href="/css/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>

  <div class="header-container">
    <div class="info-bar">
      <div class="info-item">
        <i class="fas fa-phone"></i>Autoparc: +40 740 513 713
      </div>
      <div class="info-item">
        <i class="fas fa-money-bill-wave"></i>Finanțare: +40 744 665 663
      </div>
    </div>
  
    <nav class="main-nav">
      <picture>
        <source srcset="/images/logo.webp" type="image/webp">
        <img src="/images/logo.png" alt="Logo" class="logo">
      </picture>      
      <button class="burger-menu" aria-label="Menu">☰</button>
      <ul class="nav-links">
        <li><a href="/">Acasă</a></li>
        <li><a href="/masini-de-vanzare">Mașini de Vânzare</a></li>
        <li><a href="/despre-noi">Despre noi</a></li>
        <li><a href="/finantare">Finanțare</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/profesional">Profesional</a></li>
      </ul>
    </nav>
  </div>
  

  <!-- Main Content -->
  <main>
    <section class="intro">
      <div class="intro-text">
        <h1 style="font-size: 3rem;">Dealer Auto Satu Mare &nbsp;<img src="/images/logo.png" alt="Logo" class="logo"></h1>
        <p class="text-glow">ACCEPTAM SCHIMBURI AUTO (BUYBACK) GARANTIE 12-36 LUNI CUTIE SI MOTOR</p>
      </div>
      <div class="intro-form">
        <h2>Completează pentru Finanțare</h2>
        <form action="/contact" method="POST">
          <input type="text" name="name" placeholder="Nume" required>
          <input type="email" name="email" placeholder="Email" required>
          <input type="tel" name="phone" placeholder="Telefon" required>
          <button type="submit">Trimite</button>
        </form>
      </div>
    </section>

    <section class="search-form">
       <!-- Search Form -->
    <form action="/masini-de-vanzare" method="GET" class="search-form">
      <div class="search-fields">
        <input type="text" name="marca" placeholder="Marca" />
        <input type="text" name="model" placeholder="Model" />
        <input type="number" name="an_fabricatie" placeholder="An fabricație" />
        <input type="text" name="combustibil" placeholder="Combustibil" />
        <input type="text" name="cutie_viteza" placeholder="Cutie Viteza" />
        <input type="number" name="min_price" placeholder="Preț Minim" />
        <input type="number" name="max_price" placeholder="Preț Maxim" />
        <button type="submit">Caută</button>
      </div>
    </form>
    </section>

<!-- Cars Display -->
<section class="cars-display">
  
  <h2 style="display: flex; justify-content: center;">Mașini Disponibile</h2>
  <div class="cars-grid" id="carsGrid">
    <% cars.forEach(car => { %>
      <div class="car-item">
        <img src="<%= car.image_path %>" alt="<%= car.marca %> <%= car.model %>" class="car-image">
        <div class="car-details">
          <h3><%= car.marca %> <%= car.model %></h3>
          <p><%= car.capacitate_cilindrica %> cm³, <%= car.combustibil %>, <%= car.putere %> CP, <%= car.an_fabricatie %> <span id="price-tag"> Preț: €<%= car.price %></span></p>
          <a href="/car/<%= car.id %>" class="view-details">Vezi Detalii</a>
        </div>
      </div>
    <% }); %>
  </div>
</section>

  <!-- Floating Buttons -->
  <a href="https://wa.me/your-number" class="floating-btn whatsapp" target="_blank">WhatsApp</a>
  <a href="/finantare" class="floating-btn finantare">Finanțare</a>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <div class="footer-logo-section">
        <img src="/images/logo.webp" alt="Logo">
      </div>
      <div class="footer-locatii">
        <h3>LOCAȚII</h3>
        <ul>
          <li>STR. LUCIAN BLAGA, NR. 347</li>
          <li>440227 Satu Mare, Romania</li>
          <hr>
          <li>ANPC</li>
        </ul>
        <div class="footer-anpc">
          <a href="http://www.anpc.ro" target="_blank">
            <img src="/images/anpc1.webp" alt="ANPC Link">
          </a>
          <a href="http://www.anpc.ro" target="_blank">
            <img src="/images/anpc2.webp" alt="ANPC Link">
          </a>
        </div>
      </div>
      <div class="footer-program">
        <h3>PROGRAM</h3>
        <ul>
          <li>Luni - Vineri: 9:00 – 18:00</li>
          <li>Sâmbătă – Duminică: 9:00 - 13:00</li>
        </ul>
      </div>
      <div class="footer-quick-links">
        <h3>QUICK LINKS</h3>
        <ul>
          <li><a href="/">Acasă</a></li>
          <li><a href="/masini-de-vanzare">Mașini de Vânzare</a></li>
          <li><a href="/despre-noi">Despre noi</a></li>
          <li><a href="/finantare">Finanțare</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/profesional">Profesional</a></li>
        </ul>
      </div>
      <div class="footer-finance-form">
        <h3>Formular de Finanțare</h3>
    
        <%- include('_footer') %>

      </div>
    </div>
    <div class="footer-bottom">
      © 2025 Autoparc RolCris. Toate drepturile rezervate. <a href="https://sapcreation.com">by SAPCreation</a>
    </div>
  </footer>


  <!-- Include JS files -->
  <script src="/js/main.js"></script>
</body>
</html>