    }

    /* Main Container */
    .container {
        width: 90%;
        max-width: 1200px;
        margin: 2rem auto;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        padding-top: 20px;
    }

    /* Box Styling */
    .box {
        background-color: #1f1f1f;
        padding: 1.5rem;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

    .box:hover {
        transform: scale(1.02);
    }

    /* Heading Styles */
    .box h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
        color: #ff9800;
    }

    /* Images */
    .box img {
        width: 100%;
        max-width: auto;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Contact Form */
    .contact-form input,
    .contact-form textarea {
        width: 100%;
        padding: 0.8rem;
        margin-bottom: 1rem;
        border: none;
        border-radius: 4px;
        background-color: #333;
        color: #fff;
    }

    .contact-form button {
        padding: 0.8rem 1.5rem;
        border: none;
        background-color: #ff9800;
        color: #121212;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .contact-form button:hover {
        background-color: red;
    }
    @media (max-width: 768px) {
            .container {
                grid-template-columns: 1fr;
                gap: 1rem;
                width: 95%;
            }

            .box img {
                width: 80%;
                max-width: 250px;
