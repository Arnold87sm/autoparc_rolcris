  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background-color: #000; /* Black background */
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      color: #fff; /* White text */
      font-family: Arial, sans-serif;
      margin: 0;
      padding-top: 50px; /* Combined height of fixed elements */
    }

    main {
      flex: 1;
      padding: 20px;
    }
    h1, h2, h3 {
      color: #cb0d0d; /* Firebrick Red */
    }

    h2 {
      margin-bottom: 15px;
      font-size: 2rem;
    }

    p {
      line-height: 1.6;
      color: #ddd; /* Light grey for readability */
    }
    ul {
      list-style: none;
      padding-left: 0;
    }

    /* ul li::before {
      content: "•";
      color: #ff4500; /* Orange Red for bullets 
      display: inline-block;
      width: 1em;
      margin-left: -1em;
    } */

    .finantare-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      margin-top: 30px;
    }
    .finantare-container ul li::before {
      content: "•";
      color: #ff4500;
      display: inline-block;
      width: 1em;
      margin-left: -1em;
    }

    .finantare-form {
      background: rgba(255, 255, 255, 0.1); /* Slight transparency */
      padding: 20px;
      border-radius: 8px;
    }

    .finantare-form h3 {
      margin-bottom: 15px;
    }

    .finantare-form input, .finantare-form button {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: none;
      font-size: 1rem;
    }

    .finantare-form input {
      background-color: #333;
      color: #fff;
    }

    .finantare-form button {
      background-color: #cb0d0d; /* Firebrick Red */
      color: white;
      cursor: pointer;
    }

    .finantare-form button:hover {
      background-color: #ff4500; /* Orange Red */
    }

    .finantare-image img {
      max-width: 600px;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
    }

  @media (max-width: 768px) {
      .finantare-container {
        grid-template-columns: 1fr;
      }

      .finantare-image {
        margin-top: 20px;
      }
    }
  </style>
</head>
