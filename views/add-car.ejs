  <div class="container">
    <form action="/admin/add-car" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="type">Tipul: (SUV, Limuzina, Combi etc)</label>
        <input type="text" name="type" placeholder="Type">
      </div>
      <div class="form-group">
        <label for="detalii">Detalii Speciale:</label>
        <input type="text" name="detalii" placeholder="Detalii">
      </div>
      <div class="form-group">
        <label for="marca">Marca:</label>
        <input type="text" name="marca" placeholder="Marca" required>
      </div>
      <div class="form-group">
        <label for="model">Model:</label>
        <input type="text" name="model" placeholder="Model" required>
      </div>
      <div class="form-group">
        <label for="an_fabricatie">An fabricație:</label>
        <input type="number" name="an_fabricatie" placeholder="An fabricație" required>
      </div>
      <div class="form-group">
        <label for="combustibil">Combustibil:</label>
        <input type="text" name="combustibil" placeholder="Combustibil" required>
      </div>
      <div class="form-group">
        <label for="capacitate_cilindrica">Capacitate cilindrică:</label>
        <input type="number" name="capacitate_cilindrica" placeholder="Capacitate cilindrică" required>
      </div>
      <div class="form-group">
        <label for="putere">Putere (CP):</label>
        <input type="number" name="putere" placeholder="Putere (CP)" required>
      </div>
      <div class="form-group">
        <label for="cutie_viteza">Cutie de viteză:</label>
        <input type="text" name="cutie_viteza" placeholder="Cutie de viteză" required>
      </div>
      <div class="form-group">
        <label for="kilometrii_rulati">Kilometrii rulați:</label>
        <input type="text" name="kilometrii_rulati" placeholder="Kilometrii rulați" required>
      </div>
      <div class="form-group">
        <label for="transmisie">Tracțiune: (4x4, Fata, Spate)</label>
        <input type="text" name="transmisie" placeholder="Transmisie" required>
      </div>
      <div class="form-group">
        <label for="caroserie">Caroserie:</label>
        <input type="text" name="caroserie" placeholder="Caroserie" required>
      </div>
      <div class="form-group">
        <label for="numar_portiere">Număr de portiere:</label>
        <input type="number" name="numar_portiere" placeholder="Număr de portiere" required>
      </div>
      <div class="form-group">
        <label for="culoare">Culoare:</label>
        <input type="text" name="culoare" placeholder="Culoare" required>
      </div>
      <div class="form-group">
        <label for="norma_poluare">Norma de poluare:</label>
        <input type="text" name="norma_poluare" placeholder="Norma de poluare" required>
      </div>
      <div class="form-group">
        <label for="vin">VIN:</label>
        <input type="text" name="vin" placeholder="VIN" required>
      </div>
      <div class="form-group">
        <label for="price">Preț:</label>
        <input type="number" name="price" step="0.01" placeholder="Price" required>
      </div>
      <div class="form-group" style="flex: 1 1 100%;">
        <label for="description">Dotari: (SEPARATE cu VIRGULA ",")</label>
        <textarea name="description" rows="4" placeholder="Description"></textarea>
      </div>
      <div class="form-group" style="flex: 1 1 100%;">
        <label for="carImages">Incărcare Imagini:</label>
        <input type="file" name="carImages" multiple>
      </div>

      <button type="submit">Adaugă</button>
    </form>
  </div>

