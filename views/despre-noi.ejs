  <style>
    /* General Page Styles */
    body {
      background-color: #000; /* Black background */
      color: #fff; /* White text for contrast */
      margin: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    main {
      flex: 1;
      padding: 20px;
    }

    h1 {
      color: #cb0d0d; /* Firebrick Red */
    }

    h2 {
      color: #ff4500; /* Orange Red */
    }

    p {
      font-size: 1.1em;
      line-height: 1.6;
    }

    /* About Section Container */
    .about-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
      overflow: hidden;
    }

    /* Left Section */
    .about-left {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .about-left button {
      background: none;
      border: 1px solid #cb0d0d;
      color: #cb0d0d;
      padding: 10px 20px;
      font-weight: bold;
      cursor: pointer;
      margin-bottom: 20px;
    }

    /* Right Section */
    .about-right {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .about-card {
      border: 1px solid #444;
      background: rgba(255, 255, 255, 0.05); /* Slight transparency */
      padding: 20px;
      text-align: left;
      border-radius: 8px;
    }

    .about-card h3 {
      margin-top: 0;
      color: #ff4500;
      font-size: 1.5em;
    }

    /* Footer Fix */
    footer {
      background-color: #111;
      color: #fff;
      padding: 20px 0;
      text-align: center;
    }

    .footer-content {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
      gap: 20px;
    }

    .footer-content nav ul {
      list-style: none;
      padding: 0;
    }

    .footer-content nav a {
      color: #fff;
      text-decoration: none;
    }

    .finance-form form input,
    .finance-form form button {
      margin: 10px 0;
      padding: 10px;
      font-size: 1em;
      width: 100%;
    }

    .finance-form form button {
      background-color: #cb0d0d;
      color: white;
      border: none;
      cursor: pointer;
    }
    /* Text Left - Image Right Section */
.about-text-image {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
  margin-top: 40px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.05); /* Light transparency background */
  border-radius: 10px;
}

.about-text-left {
  flex: 1;
}

.about-text-left h2 {
  font-size: 2em;
  color: #ff4500; /* Orange Red */
  margin-bottom: 15px;
}

.about-text-left p {
  font-size: 1.1em;
  line-height: 1.6;
  color: #ddd; /* Light grey text for contrast */
}

.about-image-right {
  flex: 1;
  text-align: center;
}

.about-image-right img {
  max-width: 100%;
  border-radius: 10px;
  box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3); /* Subtle glow effect */
}

    /* Responsive Design */
    @media (max-width: 768px) {
      .about-container {
        grid-template-columns: 1fr;
      }

      .about-right {
        grid-template-columns: 1fr;
      }

      .footer-content {
        flex-direction: column;
        text-align: center;
      }
  .about-text-image {
    flex-direction: column;
    text-align: center;
  }

  .about-image-right {
    margin-top: 20px;
  }
    }
  </style>
